<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OyunActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textSoruSayısı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soru 1"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/textSkor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skor:0"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/textSoruSayısı"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:layout_alignParentEnd="true"
            android:textSize="37sp"
            android:id="@+id/Sure"/>

        <TextView
            android:id="@+id/Soru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="15dp"
            android:layout_marginTop="200dp"
            android:textSize="25sp"
            android:textAlignment="center"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/secenek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seçenek 1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/secenek2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seçenek 2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/secenek3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seçenek 3"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/devam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_marginStart="125dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Devam"
            android:width="150dp"/>
        />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>